package MOBI;

import java.util.*;

class Number
{
	Scanner obj=new Scanner (System.in);

	public void choise()
	{
		System.out.println(" Numeric Conversion ");
		System.out.println("1.Decimal to Binary \n2.Decimal to Octal \n3.Decimal to Hexadecimal  \n4.Binary to Decimal \n5.Octal to Decimal \n6.Hexadecimal to Decimal");
		
		System.out.println("\nEnter your choice");
		int choice=obj.nextInt();
		
		switch(choice)
		{
			case 1:
			{
				Decimal_to_Binary();
				break;
			}
			case 2:
			{
				Decimal_to_Octal();
				break;
			}
			case 3:
			{
				Decimal_to_Hexadecimal();
				break;
			}
			case 4:
			{
				Binary_to_decimal();
				break;
			}
			case 5:
			{
				Octal_to_Decimal();
				break;
			}
			case 6:
			{
				Hexadecimal_To_Decimal();
				break;
			}
			
			default:
			{
				System.out.println("Please enter the correct choice");
			}
		}
		
	}
	
	
	public void Decimal_to_Binary()
	{
		System.out.println("Enter the decimal number that you want to change into the binary number ");
		
		 int num=obj.nextInt();
		 
		 String str="";
		 while(num>0)
			{
				int reminder=num%2;
				num=num/2;
				str=reminder+str;
			}
			System.out.println("After converting decimal to binary " +str);
		
			 
	}
	
	
	public void Decimal_to_Octal()
	{
		System.out.println("Enter the decimal number that you want to change into the octal number ");
		
		 int number=obj.nextInt();
		 int num=number;
		 
		String Str="";
		while(num>0)
		{
			int reminder=num%8;
			num=num/8;
			Str=reminder+Str;
		}
		
		System.out.println("An Occtal number of "+number+" is "+Str);
	
	}
	
	
	public void Decimal_to_Hexadecimal()
	{
		System.out.println("Enter the number that you want to convert into Hexadecimal");
		int number=obj.nextInt();
		int num=number;
		
		String Str="";
		
		while(num>0)
		{
			int reminder=num%16;
			num=num/16;
			Str=reminder+Str;
		}
		
		System.out.println("After converting Decimal to Hexadecimal");
		
		System.out.println("An Hexadecimal number of "+number+" is "+Str);
	
	}
	
	
	public void Binary_to_decimal()
	{
		System.out.println("Enter the binary number");
		int number=obj.nextInt();
		
		int num=number;
		 int index=0;
		 int Decimal_number=0;
		 while(num>0)
		 {
			 int rem=num%10;
			 num=num/10;
			 
			 Decimal_number=(int) (Decimal_number+rem*(Math.pow(2, index++)));
			 
			 
		 }
		 
		 System.out.println("After converting binary to decimal the decimal number is  " +Decimal_number);
	
	}
	
	public void Octal_to_Decimal()
	{
		System.out.println("Enter the octal number ");
		int number =obj.nextInt();
		
		int num =number;
		int index=0;
		int decimal=0;
		
		while(num>0)
		{
			
			int reminder=num%10;
			num=num/10;
			decimal=(int) (decimal+reminder*(Math.pow(8, index++)));
			
		}
		
		System.out.println("After converting the octal to decimal");
		System.out.println(decimal);
		
		
	}
	
	public void Hexadecimal_To_Decimal()
	{
		System.out.println("Enter the hexadecimal number");
		int number =obj.nextInt();
		
		int num =number;
		int index=0;
		int Decimal=0;
		
		while(num>0)
		{
			
			int reminder=num%10;
			num=num/10;
			Decimal=(int) (Decimal+reminder*(Math.pow(16, index++)));
			
		}
		
		System.out.println("After converting the hexadecimal to decimal");
		System.out.println(Decimal);
		
	}
	
	
}
public class Number_Converter
{

	public static void main(String[] args) 
	{
		Scanner scanner =new Scanner (System.in);
		char ch;
		Number obj=new Number();
		
		do 
		{
			obj.choise();
			System.out.println("\nDo you want to continue then press 'y' ");
			ch=scanner.next().charAt(0);
		}while(ch=='y');
		

	}

}

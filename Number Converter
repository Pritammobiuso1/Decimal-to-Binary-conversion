package Mobiuso;

import java.util.Scanner;

class Number_Conveter
{
	public static String toBinary(int number)
	{
		
		int num=number;
		 String str="";
		 while(num>0)
			{
				int reminder=num%2;
				num=num/2;
				str=reminder+str;
			}
		return str;
		
	}
	
	
	public static String to_Octal(int number)
	{
		
		 int num=number;
		 
		String Str="";
		while(num>0)
		{
			int reminder=num%8;
			num=num/8;
			Str=reminder+Str;
		}
		return Str;
		
	}
	
	
	public static String to_Hexadecimal(int number)
	{
		int num=number;
		String Str="";
		while(num>0)
		{
			int reminder=num%16;
			num=num/16;
			Str=reminder+Str;
		}
		return Str;
	}
	
	public static int Binary_To_Decimal(int number)
	{
		int num=number;
		 int index=0;
		 int Decimal_number=0;
		 while(num>0)
		 {
			 int rem=num%10;
			 num=num/10;
			 Decimal_number=(int) (Decimal_number+rem*(Math.pow(2, index++)));
		 
		 }
		return Decimal_number;
		
	}
	
	public static int Octal_to_Decimal(int number)
	{
		int num =number;
		int index=0;
		int Decimal_number=0;
		
		while(num>0)
		{
			
			int reminder=num%10;
			num=num/10;
			Decimal_number=(int) (Decimal_number+reminder*(Math.pow(8, index++)));
			
		}
		return Decimal_number;
		
	}
	
	public static int Hexadecimal_To_Decimal(int number)
	{
		
		int num =number;
		int index=0;
		int Decimal_number=0;
		
		while(num>0)
		{
			
			int reminder=num%10;
			num=num/10;
			Decimal_number=(int) (Decimal_number+reminder*(Math.pow(16, index++)));
			
		}
		return Decimal_number;
		
	}
	
	
	
}
public class Client
{

	public static void main(String[] args) 
	{
		Scanner obj=new Scanner (System.in);
		System.out.println("****Choices****");
		System.out.println("1.Decimal to Binary \n2.Decimal to Octal \n3.Decimal to Hexadecimal  \n4.Binary to Decimal \n5.Octal to Decimal \n6.Hexadecimal to Decimal");
		System.out.println("\nPlease select your choice");
		int choice=obj.nextInt();
		
		
		System.out.println("Enter the number to be converted");
		int Number_To_Be_Converted=obj.nextInt();
		
		switch(choice)
		{
		case 1:
			System.out.println("After converting the number from Decimal to Bianry is");
			System.out.println(Number_Conveter.toBinary(Number_To_Be_Converted));
			break;
			
		case 2:
			System.out.println("After converting the number from Decimal to Octal is");
			System.out.println(Number_Conveter.to_Octal(Number_To_Be_Converted));
			break;
			
		case 3:
			System.out.println("After converting the number from Decimal to Hexadecimal is");
			System.out.println(Number_Conveter.to_Hexadecimal(Number_To_Be_Converted));
			break;
			
		case 4:
			System.out.println(Number_Conveter.Binary_To_Decimal(Number_To_Be_Converted));
			break;
			
		case 5:
			System.out.println("After converting the number from Octal to decimal is");
			System.out.println(Number_Conveter.Octal_to_Decimal(Number_To_Be_Converted));
			break;
			
		case 6:
			System.out.println("After converting the number from Hexadecimal to Decimal is");
			System.out.println(Number_Conveter.Hexadecimal_To_Decimal(Number_To_Be_Converted));
			break;
		}
		
	}

}
